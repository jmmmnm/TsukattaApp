<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".InputActivity"
    tools:showIn="@layout/activity_input">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:layout_margin="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView"
        android:text="----/--/--"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <Button
        android:id="@+id/button_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/button_date"
        android:text="--:--"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/payment_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_times"
        android:layout_margin="6dp"
        android:layout_toEndOf="@+id/imageView"
        android:hint="支払い方法"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_text_view"
        android:layout_margin="6dp"
        android:layout_toEndOf="@+id/imageView"
        android:hint="金額"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <Button
        android:id="@+id/button_1"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_4"
        android:text="1" />
    <Button
        android:id="@+id/button_2"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_1"
        android:layout_alignTop="@id/button_1"
        android:text="2" />
    <Button
        android:id="@+id/button_3"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_2"
        android:layout_alignTop="@id/button_1"
        android:text="3" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_7"
        android:text="4" />
    <Button
        android:id="@+id/button_5"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_4"
        android:layout_alignTop="@id/button_4"
        android:text="5" />
    <Button
        android:id="@+id/button_6"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_5"
        android:layout_alignTop="@id/button_4"
        android:text="6" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_add"
        android:text="7" />
    <Button
        android:id="@+id/button_8"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_7"
        android:layout_alignTop="@id/button_7"
        android:text="8" />
    <Button
        android:id="@+id/button_9"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_8"
        android:layout_alignTop="@id/button_7"
        android:text="9" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:text="add"/>
    <Button
        android:id="@+id/button_10"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_add"
        android:layout_alignTop="@id/button_add"
        android:text="0" />
    <Button
        android:id="@+id/button_del"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_10"
        android:layout_alignTop="@id/button_add"
        android:text="del" />


    <Button
        android:id="@+id/button_11"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_14"
        android:text="-" />
    <Button
        android:id="@+id/button_12"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_11"
        android:layout_alignTop="@id/button_11"
        android:text="-" />
    <Button
        android:id="@+id/button_13"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_12"
        android:layout_alignTop="@id/button_11"
        android:text="-" />

    <Button
        android:id="@+id/button_14"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_17"
        android:text="-" />
    <Button
        android:id="@+id/button_15"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_14"
        android:layout_alignTop="@id/button_14"
        android:text="-" />
    <Button
        android:id="@+id/button_16"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_15"
        android:layout_alignTop="@id/button_14"
        android:text="-" />

    <Button
        android:id="@+id/button_17"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_above="@id/button_non"
        android:text="-" />
    <Button
        android:id="@+id/button_18"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_17"
        android:layout_alignTop="@id/button_17"
        android:text="-" />
    <Button
        android:id="@+id/button_19"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_18"
        android:layout_alignTop="@id/button_17"
        android:text="-" />

    <Button
        android:id="@+id/button_non"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:text="non" />
    <Button
        android:id="@+id/button_20"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_non"
        android:layout_alignTop="@id/button_non"
        android:text="-" />
    <Button
        android:id="@+id/button_back"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:layout_toEndOf="@id/button_20"
        android:layout_alignTop="@id/button_non"
        android:text="戻る" />

</RelativeLayout>